---
import Layout from '../layouts/Layout.astro';
import home from '../data/home.json';
---

<Layout title={home.metaTitle} description={home.metaDescription}>
  <section aria-labelledby="hero-title">
    <h1 id="hero-title">{home.hero.title}</h1>
    <p>{home.hero.subtitle}</p>
    <a href={home.hero.ctaLink}>{home.hero.ctaText}</a>
  </section>

  <section aria-labelledby="hits-title">
    <h2 id="hits-title">{home.hits.title}</h2>
    <p>{home.hits.text}</p>
  </section>

  <section aria-labelledby="benefits-title">
    <h2 id="benefits-title">{home.benefits.title}</h2>
    <ul>
      {home.benefits.items.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </section>

  <section aria-labelledby="works-title">
    <h2 id="works-title">{home.works.title}</h2>
    <p>{home.works.text}</p>
  </section>

  <section aria-labelledby="cta-title">
    <h2 id="cta-title">{home.cta.title}</h2>
    <p>{home.cta.text}</p>
    <p>{home.cta.note}</p>
  </section>
</Layout>
